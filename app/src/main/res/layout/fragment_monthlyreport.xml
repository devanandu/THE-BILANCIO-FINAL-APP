<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:pointerIcon="arrow"
    tools:context="hitha.ken.deva.abin.bilancio.monthlyreport">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/group"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/month"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1">

                <RadioButton
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.67"
                    android:text="Monthwise"
                    android:textColor="@android:color/background_light"
                    app:buttonTint="@color/colorPrimary"
                    tools:layout_editor_absoluteX="163dp"
                    tools:layout_editor_absoluteY="16dp" />

                <RadioButton
                    android:id="@+id/day"
                    style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.67"
                    android:text="Daywise"
                    android:textColor="@android:color/background_light"
                    app:buttonTint="@color/colorPrimary"
                    tools:ignore="HardcodedText"
                    tools:layout_editor_absoluteX="239dp"
                    tools:layout_editor_absoluteY="16dp" />

            </RadioGroup>

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                android:dropDownSelector="@android:drawable/arrow_down_float"
                android:pointerIcon="arrow"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</FrameLayout>
